<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_stock_code" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.stock.code</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="stock.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='group_stock_multi_locations']" position="after">
				<div class="o_setting_container">
					<div class="o_setting_left_pane">
						<field name="stock_code_prefix" placeholder="STK"/>
					</div>
					<div class="o_setting_right_pane">
						<label for="stock_code_prefix" string="Stok Kodu Ön Eki"/>
						<div class="text-muted">Stok kodu üretiminde kullanılacak ön ek.</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>